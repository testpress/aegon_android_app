<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PaymentSummaryFrag">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="10dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@android:color/white"
        android:minHeight="50dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/gotham_medium_0"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="INV #09503093"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:background="@drawable/dash_line"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/gotham_medium_0"
                android:textSize="16sp"
                android:textColor="@color/txt_heading_color"
                android:layout_height="wrap_content"
                android:text="Item in cart"/>
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="235dp"
        android:background="@color/txt_btn_back"
        />


</FrameLayout>